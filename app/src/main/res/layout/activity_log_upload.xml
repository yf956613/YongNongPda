<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="60dp"></RelativeLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/c_black"
            android:textSize="@dimen/size_16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="上传时间" />

        <TextView
            android:textColor="@color/c_black"
            android:textSize="@dimen/size_16"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@drawable/edittext_bg"
            android:drawableRight="@mipmap/ic_arrow_down" />

        <Button
            android:id="@+id/btnQuery"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_white_button_selector"
            android:text="@string/button_query"
            android:textColor="@color/c_white"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:background="@color/header_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:textColor="@color/c_black"
            android:textSize="@dimen/size_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="上传时间" />

        <TextView
            android:gravity="center"
            android:textColor="@color/c_black"
            android:textSize="@dimen/size_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="成功" />

        <TextView
            android:gravity="center"
            android:textColor="@color/c_black"
            android:textSize="@dimen/size_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="失败" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>

